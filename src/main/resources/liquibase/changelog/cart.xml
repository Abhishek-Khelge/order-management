<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="20012024-1" author="Abhishek_Khelge">
        <createTable tableName="cart">
            <column name="id" type="CHAR(25)">
                <constraints primaryKey="true" primaryKeyName="cart_pk"/>
            </column>
            <column name="user_id" type="VARCHAR">
                <constraints nullable="false"/>
            </column>
            <column name="product_id" type="CHAR(25)">
                <constraints nullable="false"/>
            </column>
            <column name="quantity" type="INT">
                <constraints nullable="false" checkConstraint="quantity >= 1"/>
            </column>
            <column name="created_at" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="modified_at" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="is_deleted" type="BOOL" defaultValue="false">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addUniqueConstraint tableName="cart" columnNames="user_id, product_id" constraintName="user_id_product_id_uk"/>
        <createIndex tableName="cart" indexName="ix_user_id">
            <column name="user_id"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
